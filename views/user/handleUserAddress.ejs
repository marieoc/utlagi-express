<%- include('../includes/_header.ejs') -%>
    <main class="container user-account-page">
        <div>
            <nav class="breadcrumb">
                <ul>
                    <li><a href="/">Accueil</a></li>
                    <li><a href="/moncompte">Mon compte</a></li>
                    <li><a href="/moncompte/gerer/adresse/<%= address.id %>">Modifier mon adresse</a></li>
                </ul>
            </nav>
            
            <div class="account-section-wrapper addressform-wrapper center">
                <h1>Bonjour, <%= session.username %> !</h1>
                <div class="dashboard">
                    <div class="flex-center flex-col w-full">
                        <h2>Modifier mon adresse</h2>
                        
                        <form class="address-form w-full" action="/moncompte/gerer/adresse/<%= address.id %>" method="POST" encType="multipart/form-data">
                            <div class="flex flex-col w-full">
                                <div class="block w-full">
                                    <label for="street">Rue :
                                        <input id="street" name="street" type="text" value="<%= address.street %>" />
                                    </label>
                                    <label for="zip">Code postal :
                                        <input id="zip" name="zipCode" type="text" value="<%= address.zipCode %>" />
                                    </label>
                                    <label for="city">Ville :
                                        <input id="city" name="city" type="text" value="<%= address.city %>" />
                                    </label>
                                    <label for="country">Pays :
                                        <input id="country" name="country" type="text" value="<%= address.country %>" />
                                    </label>
                                </div>
                                
                                <div class="address-checkbox checkbox-wrapper">
                                    <input id="billingAddress" type="checkbox" name="billingAddress" 
                                    <%= address.billingAddress === true ? "checked" : "" %> />
                                    <label for="billingAddress">Cette adresse est mon adresse de facturation</label>
                                </div>
                                <div class="address-checkbox checkbox-wrapper">
                                    <input id="deliveryAddress" type="checkbox" name="deliveryAddress"
                                    <%= address.deliveryAddress === true ? "checked" : "" %> />
                                    <label for="deliveryAddress">Cette adresse est mon adresse de livraison</label>
                                </div>
                                
                            </div>
                            <div class="modify-data-btn__wrapper flex-center">
                                <button type="submit" class="modify-data__btn primary-btn">Modifer mon adresse</button>
                                <a class="delete-address-btn" href="/moncompte/supprimer/adresse/<%= address.id %>">Supprimer</a>
                            </div>
                            
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </main>
<%- include('../includes/_footer.ejs') -%>